---
import Menu from "@components/Menu.astro";
import "@/assets/styles/global.css";
import "@/assets/styles/fonts.css";

interface Props {
  title?: string;
  lang?: string;
}

const { title = "Bread Toolkit", lang = "en" } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="alternate" type="application/rss+xml" title="Breadtoolkit" href="/rss.xml" />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <Menu />
    </header>
    <main>
      <slot />
    </main>
  </body>
  <footer></footer>
</html>
