---
const currentPath = Astro.url.pathname;

export const pages = ["calculator", "recipes"];
---

<nav>
  <ul>
    <li>
      <a href="/"><strong>Breadtoolkit</strong></a>
    </li>
  </ul>
  <ul>
    {pages.map((name) => {
      const currentPage = currentPath === `/${name}` ? "page" : undefined;
      return (
        <li aria-current={currentPage}>
          <a href={`/${name}`}>{name}</a>
        </li>
      );
    })}
  </ul>
</nav>

<style>
  a {
    text-transform: capitalize;
  }
</style>
