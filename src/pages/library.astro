          <input type="button" name="input" value="Input Button" />
          <input type="reset" name="reset" value="Reset Button" />
          <input type="submit" name="submit" value="Submit Button" />
          <input type="button" name="primary" value="Primary button" data-variant="primary" />
          <button type="button" name="outlined"  data-outline="">Outline button</button>
        </div>
      </form>
    </article>
  </section>

  <hr />

  <section>
    <article>
      <h2 id="details">Details</h2>
      <details>
        <summary>
        Check whats inside
        </summary>
        I'm the details of a summary.
      </details>
    </article>
  </section>

  <hr />

  <section>
    <article>
      <h2 id="modal">Modal</h2>

      <button id="modal-button">Dialog</button>

      <dialog id="modal-dialog" closedby="any">
        <form method="dialog" aria-labelledby="dialog-title">
          <article>
            <hgroup>
              <h2 id="dialog-title">Modal dialog</h2>
              <p>Dialog description inside a paragraph.</p>
            </hgroup>
            <div>
              <label for="modal-input">Form input label</label>
              <input id="modal-input" type="text" />
            </div>
            <footer>
              <button  formnovalidate>Cancel</button>
              <input type="submit" value="Confirm" />
            </footer>
          </article>
        </form>
      </dialog>
    </article>

    <div role="group" data-spaced>
      <button popovertarget="popover-auto" popovertargetaction="toggle">Auto popover</button>
      <button popovertarget="popover-manual" popoveraction="toggle">Manual popover</button>
      <button id="hint-button" popovertarget="popover-hint" popoveraction="toggle">Hint popover</button>
    </div>

    <div id="popover-auto" popover="auto">
      Hello, I'm an auto popover. I can be dismissed.
    </div>

    <div id="popover-manual" popover="manual">
      Hello, I'm a manual popover. I cannot be dismissed. Use the toggle button.
    </div>
    
    <div id="popover-hint" popover="hint">
      Hello, I'm a hint popover. I'm bound to the hover state of my trigger button.
    </div>
  </section>

  <hr />
</Layout>

<script>
const dialogButton = document.getElementById("modal-button");
const dialog = document.getElementById("modal-dialog") as HTMLDialogElement | null;
if (dialogButton && dialog) {
  dialogButton.addEventListener("click", () => {
    dialog.showModal();
  })
}

const hintButton = document.getElementById("hint-button");
const tooltip = document.getElementById("popover-hint");

if (hintButton && tooltip) {
  hintButton.addEventListener("mouseover", () => {
    tooltip.showPopover({ source: hintButton });
  });

  hintButton.addEventListener("mouseout", () => {
    tooltip.hidePopover();
  });

  hintButton.addEventListener("focus", () => {
    tooltip.showPopover({ source: hintButton });
  });

  hintButton.addEventListener("blur", () => {
    tooltip.hidePopover();
  });
}

</script>
